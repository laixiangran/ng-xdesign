{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "importHelpers": true,
        "baseUrl": ".",
        "rootDir": ".",
        "module": "es2015",
        "target": "es5"
    },
    "files": [
        "public_api.ts"
    ],
    "angularCompilerOptions": {
        "strictMetadataEmit": true,
        "skipMetadataEmit": false,
        "skipTemplateCodegen": true
    }
}
